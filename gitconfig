[user]
	name = Diego Waxemberg
	email = diego.waxemberg@gmail.com
[github]
	user = dwaxemberg
[log]
	decorate = short
[color]
	ui = true
[pager]
	show-branch = true
	status = true
[apply]
	whitespace = fix
[core]
	excludesfile = ~/.gitignore
	pager = less -r
[push]
	default = simple
[alias]
	aa  = add --all
	au  = add --update
	b   = branch
	bd  = branch -D
	ci  = commit
	cm  = commit -m
	co  = checkout
	cob = checkout -b
	pop = stash pop
    lf  = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --numstat
    lg  = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	pr  = pull --rebase
	sl  = stash list
	ss  = stash save
	st  = status
	subsync = submodule sync
	subup = submodule update --init
